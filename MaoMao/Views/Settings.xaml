<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MaoMao.ViewModels"
             x:DataType="vm:SettingsViewModel"
             x:Class="MaoMao.Views.Settings"
             Shell.NavBarIsVisible="False">
    <!--<ContentPage.Padding>
        <OnIdiom x:TypeArguments="Thickness">
            <OnIdiom.Phone>20,50</OnIdiom.Phone>
            <OnIdiom.Default>20,10</OnIdiom.Default>
        </OnIdiom>
    </ContentPage.Padding>-->

    <VerticalStackLayout Spacing="10">
        <Label 
            Text="Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="18"
            FontAttributes="Bold"/>

        <Button Text="Dark Theme" Command="{Binding DarkThemeCommand}" MaximumWidthRequest="150"/>
